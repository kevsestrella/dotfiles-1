  $TERMINAL -e {alsamixer, lf, tremc, htop, nvim, calcurse, nvim ~/vimwiki/index.wiki, pulsemixer}

super + {_, alt} + m
	mpv {$(xsel) ,$(xsel) --no-video --loop-playlist --shuffle}
